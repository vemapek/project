#include<stdio.h>
#include <Windows.h>
#include <stdbool.h>
#include <limits.h>
#include <stdlib.h>
#include <time.h>

#define WIDTH   30
#define HEIGHT  10


char board[HEIGHT][WIDTH];


int x;
int y;

int dx;
int dy;

void initialize(int, int);
void display();
void turn();
void move();




void initialize(int start_x, int start_y) {
    
    for (int i = 0; i < WIDTH; i++) {
        board[0][i] = board[HEIGHT - 1][i] = '#';
    }

    
    for (int i = 1; i < HEIGHT - 1; i++) {
        for (int j = 1; j < WIDTH - 1; j++) {
            board[i][j] = ' ';
        }
    }
    
    for (int i = 0; i < HEIGHT; i++) {
        board[i][0] = board[i][WIDTH - 8] = '#';
    }
   
    for (int i = 0; i < HEIGHT; i++) {
        board[i][0] = board[i][WIDTH - 1] = '#';
    }
    
    x = start_x;
    y = start_y;
    dx = 0;
    dy = 1;
    board[x][y] = '@';
   
 
}


void display() {

    for (int i = 0; i < HEIGHT; i++) {
        for (int j = 0; j < WIDTH; j++) {
            printf("%c", board[i][j]);
        }
        printf("\n");
    }
}

void move() {
    board[x][y] = '-';
    x += dx;
    y += dy;
    board[x][y] = '@';
}

int main(void)
{
    srand((unsigned int)time(NULL));

    initialize(1, 1);
    while (1) {
        move();
        system("cls");
        display();
        Sleep(100);  
        if (y == 23) {
            break;
        }
    }


    return 0;
}
