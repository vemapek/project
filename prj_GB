#include<stdio.h>
#include <Windows.h>
#include <stdbool.h>
#include <limits.h>
#include <stdlib.h>
#include <time.h>

#define WIDTH   45
#define HEIGHT  10


char board[HEIGHT][WIDTH];


int x;
int y;

int dx;
int dy;

void initialize(int, int);
void display();
void turn();
void move();




void initialize(int start_x, int start_y) {

    for (int i = 0; i < WIDTH; i++) {
        board[0][i] = board[HEIGHT - 1][i] = '=';
    }


    for (int i = 1; i < HEIGHT - 1; i++) {
        for (int j = 1; j < WIDTH - 1; j++) {
            board[i][j] = ' ';
        }
    }

    for (int i = 0; i < HEIGHT; i++) {
        board[i][0] = board[i][WIDTH - 8] = ' ';
    }

    for (int i = 0; i < HEIGHT; i++) {
        board[i][0] = board[i][WIDTH - 1] = ' ';
    }

    x = start_x;
    y = start_y;
    dx = 0;
    dy = 1;
    board[x][y] = '>';


}


void display() {

    for (int i = 0; i < HEIGHT; i++) {
        for (int j = 0; j < WIDTH; j++) {
            printf("%c", board[i][j]);
        }
        printf("\n");
    }
}

void move() {
    board[x][y] = ' ';
    x += dx;
    y += dy;
    board[x][y] = '>';
}

int main(void)
{
    /*
    printf("경주할 거북이의 마릿수(최대 10)를 입력하고 Enter>");
     scanf("%d", &tuetle_num);

   printf("%d개 거북이의 이름(최대 한글 3자)을 입력하고 Enter하세요.\n", tuetle_num);
     printf("\n");
     for (i = 0; i < tuetle_num; i++)
     {
         printf("%d번 거북이 이름 :", i + 1);
         fflush(stdin);
         scanf("%s", turtle_name[i]);
     }

    */

    printf("거북이 레이싱 게임\n\n");

    srand((unsigned int)time(NULL));

    initialize(1, 1);
    while (1) {
        move();
        system("cls");
        display();
        Sleep(100);
        if (y == 40) {
            break;
        }
    }
    printf("게임 종료\n\n");

    return 0;
}
